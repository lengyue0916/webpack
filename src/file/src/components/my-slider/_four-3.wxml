                        </view>
                        <view class="read-num">
                            <text>{{list[1].read_num||0}}阅读</text>
                        </view>
                    </view>
                </view>
            </view>
        </view>
        <view class="four-bottom">
           <view class="bottom-item " bindtap="goInDetails" data-id="{{list[2].id}}" data-search_status="{{list[2].search_status}}">
               <view class="bottom-item-left ">
                   <view class="bottom-item-title">
                       <text>{{list[2].title}}</text>
                   </view>
                   <view class="bottom-item-other ">
                       <view class="time ">
                           <text>{{list[2].publish_time}}</text>
                           <text>来源:{{list[2].source_topic}}</text>
                       </view>
                       <view class="read-num ">
                           <text>{{list[2].read_num||0}}阅读</text>
                       </view>
                   </view>
               </view>
               <view class="bottom-item-right ">
                   <!-- <image src="{{list[2].cover_img}} " mode='aspectFill' lazy-load></image> -->
                <my-image mode="aspectFill" src="{{list[2].cover_img}}" class="image"></my-image>

               </view>
           </view>
