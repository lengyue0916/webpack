<template name="four-3">
    <view class="four-three">
        <view class="four-top">
            <view class="top-only" bindtap="goInDetails" data-id="{{list[0].id}}" data-search_status="{{list[0].search_status}}">
                <!-- <image src="{{list[0].cover_img}}" mode="aspectFill" lazy-load></image> -->
                <my-image mode="aspectFill" src="{{list[0].cover_img}}" class="image"></my-image>
                <view class="top-desc">
                    <view class="item-title">
                        <text>{{list[0].title}}</text>
                    </view>
                    <view class="item-other">
                        <view class="item-time">
                            <text>{{list[0].publish_time}}</text>
                            <text>来源:{{list[0].source_topic}}</text>
                        </view>
                        <view class="read-num">
                            <text>{{list[0].read_num||0}}阅读</text>
                        </view>
                    </view>
                </view>
            </view>
            <view class="top-only" bindtap="goInDetails" data-id="{{list[1].id}}" data-search_status="{{list[1].search_status}}">
